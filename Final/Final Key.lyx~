\begin_body

\begin_layout Title
Math 320 Take Home Final Key
\end_layout

\begin_layout Section*
1.
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\left\{ \left(0,e\right),\left(0,r\right),\left(0,r^{2}\right),\left(0,f\right),\left(0,fr\right),\left(0,fr^{2}\right),\left(1,e\right),\left(1,r\right),\left(1,r^{2}\right),\left(1,f\right),\left(1,fr\right),\left(1,fr^{2}\right),\left(2,e\right),\left(2,r\right),\left(2,r^{2}\right),\left(2,f\right),\left(2,fr\right),\left(2,fr^{2}\right)\right\} 
\]

\end_inset


\end_layout

\begin_layout Section*
2.
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\mathbb{Z}\slash4\mathbb{Z}=\left\{ 4\mathbb{Z},1+4\mathbb{Z},2+4\mathbb{Z},3+4\mathbb{Z}\right\} 
\]

\end_inset


\end_layout

\begin_layout Section*
3.
\end_layout

\begin_layout Standard
We need to show 
\begin_inset Formula $\phi$
\end_inset

 is one-to-one, onto, and obeys the homomorphism property.
 Suppose 
\begin_inset Formula $x,y\in G$
\end_inset


\end_layout

\begin_layout Subsection*
One-to-one
\end_layout

\begin_layout Standard
Suppose 
\begin_inset Formula $\phi\left(x\right)=\phi\left(y\right)$
\end_inset

.
 Then 
\begin_inset Formula 
\[
\sqrt{x}=\sqrt{y}
\]

\end_inset

 so 
\begin_inset Formula 
\[
\sqrt{x}^{2}=\sqrt{y}^{2}
\]

\end_inset

 and thus 
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
x=y
\]

\end_inset


\end_layout

\begin_layout Subsection*
Onto
\end_layout

\begin_layout Standard
Let 
\begin_inset Formula $x\in\mathbb{R}^{+}$
\end_inset

.
 Then 
\begin_inset Formula $x^{2}\in\mathbb{R}^{+}$
\end_inset

, and as 
\begin_inset Formula $\phi\left(x^{2}\right)=\sqrt{x^{2}}=x$
\end_inset

, then 
\begin_inset Formula $x$
\end_inset

 is onto.
 
\end_layout

\begin_layout Subsection*
Homomorphism
\end_layout

\begin_layout Standard
Let 
\begin_inset Formula $x,y\in G$
\end_inset

.
 Then 
\begin_inset Formula $\phi\left(xy\right)=\sqrt{xy}=\sqrt{x}\sqrt{y}=\phi\left(x\right)\phi\left(y\right)$
\end_inset


\end_layout

\begin_layout Section*
4.
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
2x^{2}+ix+\left(1-i\right)=\left(x+1\right)\left(2x+\left(-2+i\right)\right)+\left(3-2i\right)
\]

\end_inset


\end_layout

\begin_layout Section*
5.
 
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\left(x^{3}+4x+3\right)\left(4x^{3}+2x^{2}+1\right)
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
=4x^{6}+2x^{5}+x^{3}+16x^{4}+8x^{3}+4x+12x^{3}+6x^{2}+3=4x^{6}+2x^{5}+16x^{4}+21x^{3}+6x^{2}+4x+3
\]

\end_inset


\end_layout

\begin_layout Standard
but as we are working in 
\begin_inset Formula $\mathbb{Z}_{7}\left[x\right]$
\end_inset

,
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
=4x^{6}+2x^{5}+2x^{4}+0x^{3}+6x^{2}+4x+3=4x^{6}+2x^{5}+2x^{4}+6x^{2}+4x+3
\]

\end_inset


\end_layout

\begin_layout Section*
6.
\end_layout

\begin_layout Standard
Let's show each of the ring axioms.
 Throughout the entire proof, let 
\begin_inset Formula $f,g,h\in E$
\end_inset

.
 
\end_layout

\begin_layout Subsection*
Closure
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\left(f+g\right)\left(-x\right)=f\left(-x\right)+g\left(-x\right)=f\left(x\right)+g\left(x\right)=\left(f+g\right)\left(x\right)
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\left(f*g\right)\left(-x\right)=f\left(-x\right)g\left(-x\right)=f\left(x\right)g\left(x\right)=\left(fg\right)\left(x\right)
\]

\end_inset


\end_layout

\begin_layout Subsection*
Additive Identity
\end_layout

\begin_layout Standard
Consider 
\begin_inset Formula $f\left(x\right)=0$
\end_inset

.
 Then 
\begin_inset Formula $f\left(x\right)=0=f\left(-x\right)$
\end_inset

.
 As 
\begin_inset Formula 
\[
\left(g+0\right)\left(x\right)=g\left(x\right)+0=g\left(x\right)
\]

\end_inset


\end_layout

\begin_layout Standard
then we have 
\begin_inset Formula $0$
\end_inset

 as the additive identity.
 
\end_layout

\begin_layout Subsection*
Additive Inverses
\end_layout

\begin_layout Standard
Consider 
\begin_inset Formula $-f\left(x\right)$
\end_inset

.
 Then 
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
-f\left(-x\right)=-f\left(x\right)
\]

\end_inset


\end_layout

\begin_layout Standard
and 
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\left(f+-f\right)\left(x\right)=f\left(x\right)+-f\left(x\right)=0
\]

\end_inset


\end_layout

\begin_layout Standard
so we have additive inverses.
\end_layout

\begin_layout Subsection*
Associativity of Addition
\end_layout

\begin_layout Standard
Consider 
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\left(\left(f+g\right)+h\right)\left(x\right)=\left(f+g\right)\left(x\right)+h\left(x\right)=f\left(x\right)+g\left(x\right)+h\left(x\right)
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
=f\left(x\right)+\left(g+h\right)\left(x\right)=\left(f+\left(g+h\right)\right)\left(x\right)
\]

\end_inset


\end_layout

\begin_layout Subsection*
Commutativity of Addition
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\left(f+g\right)\left(x\right)=f\left(x\right)+g\left(x\right)=g\left(x\right)+f\left(x\right)=\left(g+f\right)\left(x\right)
\]

\end_inset


\end_layout

\begin_layout Subsection*
Associativity of Multiplication
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\left(\left(fg\right)h\right)\left(x\right)=\left(fg\right)\left(x\right)h\left(x\right)=f\left(x\right)g\left(x\right)h\left(x\right)
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
f\left(x\right)\left(gh\right)\left(x\right)=\left(f\left(gh\right)\right)\left(x\right)
\]

\end_inset


\end_layout

\begin_layout Subsection*
Distributive Laws
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\left(\left(f+g\right)h\right)\left(x\right)=\left(f+g\right)\left(x\right)h\left(x\right)=\left(f\left(x\right)+g\left(x\right)\right)h\left(x\right)
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
=f\left(x\right)h\left(x\right)+g\left(x\right)h\left(x\right)=\left(fh\right)\left(x\right)+\left(gh\right)\left(x\right)
\]

\end_inset


\end_layout

\begin_layout Standard
Similarly:
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\left(f\left(g+h\right)\right)\left(x\right)=f\left(x\right)\left(g+h\right)\left(x\right)=f\left(x\right)\left(g\left(x\right)+h\left(x\right)\right)
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
=f\left(x\right)g\left(x\right)+f\left(x\right)h\left(x\right)=\left(fg\right)\left(x\right)+\left(fh\right)\left(x\right)
\]

\end_inset


\end_layout

\begin_layout Standard
Thus 
\begin_inset Formula $\left(R,+,*\right)$
\end_inset

 is a ring.
 
\end_layout

\begin_layout Section*
7.
\end_layout

\begin_layout Standard
For convenience, call 
\begin_inset Formula $R=\mathbb{Q}\left[x\right]$
\end_inset

 
\begin_inset Formula $\left\langle x^{2}-n\right\rangle =I$
\end_inset

 and 
\begin_inset Formula $\mathbb{Q}\left[x\right]\slash\left\langle x^{2}-n\right\rangle =R\slash I$
\end_inset


\end_layout

\begin_layout Subsection*
a)
\end_layout

\begin_layout Standard
Let's use the ideal test! We need to show 
\begin_inset Formula $I$
\end_inset

 is nonempty and that for any 
\begin_inset Formula $f\left(x\right),g\left(x\right)\in I$
\end_inset

 that 
\begin_inset Formula $f\left(x\right)-g\left(x\right)\in I$
\end_inset

 and for any 
\begin_inset Formula $h\left(x\right)\in R$
\end_inset

 and 
\begin_inset Formula $f\left(x\right)\in I$
\end_inset

 that 
\begin_inset Formula $f\left(x\right)h\left(x\right),h\left(x\right)f\left(x\right)\in I$
\end_inset

.
 Suppose 
\begin_inset Formula $f\left(x\right),g\left(x\right)\in I$
\end_inset

.
 Then
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
f\left(x\right)=r\left(x\right)\left(x^{2}-n\right),g\left(x\right)=q\left(x\right)\left(x^{2}-n\right)
\]

\end_inset


\end_layout

\begin_layout Standard
for some 
\begin_inset Formula $p\left(x\right),q\left(x\right)\in R$
\end_inset

.
 Thus 
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
f\left(x\right)-g\left(x\right)=p\left(x\right)\left(x^{2}-n\right)-q\left(x\right)\left(x^{2}-n\right)=\left(p\left(x\right)-q\left(x\right)\right)\left(x^{2}-n\right)\in I
\]

\end_inset


\end_layout

\begin_layout Standard
and 
\begin_inset Formula $r\left(x\right),q\left(x\right)\in R$
\end_inset

.
 If we use 
\begin_inset Formula $f\left(x\right)$
\end_inset

 as above, and have 
\begin_inset Formula $h\left(x\right)\in R$
\end_inset

, then
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
f\left(x\right)h\left(x\right)=p\left(x\right)\left(x^{2}-n\right)h\left(x\right)=\left(p\left(x\right)h\left(x\right)\right)\left(x^{2}-n\right)
\]

\end_inset


\end_layout

\begin_layout Standard
and as 
\begin_inset Formula $p\left(x\right)h\left(x\right)\in R$
\end_inset

, then 
\begin_inset Formula $f\left(x\right)h\left(x\right)\in I$
\end_inset

.
 As 
\begin_inset Formula $R$
\end_inset

 is a commutative ring, then 
\begin_inset Formula $h\left(x\right)f\left(x\right)=f\left(x\right)h\left(x\right)\in I$
\end_inset

.
 Finally, to show 
\begin_inset Formula $I$
\end_inset

 is nonempty, note that 
\begin_inset Formula $x^{2}-n\in I$
\end_inset


\end_layout

\begin_layout Subsection*
b)
\end_layout

\begin_layout Standard
Consider the mapping 
\begin_inset Formula $\phi\left(a+bx+I\right)=a+b\sqrt{n}$
\end_inset

.
 To show this is an isomorphism, we will show this function is one-to-one,
 onto, and satisfies both homomorphism properties.
 
\end_layout

\begin_layout Subsection*
One-to-One
\end_layout

\begin_layout Standard
Suppose 
\begin_inset Formula $\phi\left(a+bx+I\right)=\phi\left(c+dx+I\right)$
\end_inset

.
 Then 
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\phi\left(a+bx+I\right)=a+b\sqrt{n}=c+d\sqrt{n}=\phi\left(c+dx+I\right)
\]

\end_inset


\end_layout

\begin_layout Standard
As 
\begin_inset Formula $a,b,c,d\in\mathbb{Q}$
\end_inset

 and 
\begin_inset Formula $\sqrt{n}\notin\mathbb{Q}$
\end_inset

, then 
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
a=c,b=d
\]

\end_inset


\end_layout

\begin_layout Standard
and 
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
a+bx+I=c+dx+I
\]

\end_inset


\end_layout

\begin_layout Subsection*
Onto
\end_layout

\begin_layout Standard
Suppose 
\begin_inset Formula $a+b\sqrt{n}\in R$
\end_inset

.
 Then 
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\phi\left(a+bx+I\right)=a+b\sqrt{n}
\]

\end_inset


\end_layout

\begin_layout Standard
for 
\begin_inset Formula $a+bx+I\in R$
\end_inset


\end_layout

\begin_layout Subsection*
Homomorphisms
\end_layout

\begin_layout Standard
Let 
\begin_inset Formula $a+bx+I,c+dx+I\in R$
\end_inset

.
 Then 
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\phi\left(a+bx+I+c+dx+I\right)=\phi\left(\left(a+c\right)+\left(b+d\right)x+I\right)
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
=a+c+\left(b+d\right)\sqrt{n}=\left(a+b\sqrt{n}\right)+\left(c+d\sqrt{n}\right)=\phi\left(a+bx+I\right)+\phi\left(c+dx+I\right)
\]

\end_inset


\end_layout

\begin_layout Standard
Similarly, 
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\phi\left(\left(a+bx+I\right)\left(c+dx+I\right)\right)=\phi\left(ac+\left(ad+bc\right)x+bdx^{2}+I\right)
\]

\end_inset


\end_layout

\begin_layout Standard
but as 
\begin_inset Formula $I=\left\langle x^{2}-n\right\rangle $
\end_inset

, then 
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
ac+\left(ad+bc\right)x+bdx^{2}+I=ac+\left(ad+bc\right)x+bdx^{2}+-bd\left(x^{2}-n\right)+I
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
=\left(ac+bdn\right)+\left(ad+bc\right)x+I
\]

\end_inset


\end_layout

\begin_layout Standard
Thus 
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\phi\left(ac+\left(ad+bc\right)x+bdx^{2}+I\right)=\phi\left(\left(ac+bdn\right)+\left(ad+bc\right)x+I\right)
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
=ac+bdn+\left(ad+bc\right)\sqrt{n}=\left(a+b\sqrt{n}\right)\left(c+d\sqrt{n}\right)
\]

\end_inset


\end_layout

\begin_layout Section*
8.
\end_layout

\begin_layout Standard
As 
\begin_inset Formula $\mathbb{Q}$
\end_inset

 is an integral domain, then 
\begin_inset Formula $\mathbb{Q}\left[x\right]$
\end_inset

 is an integral domain.
 As we are taking the quotient ring of an integral domain, we know 
\begin_inset Formula $I=\left\langle x^{2}-n\right\rangle $
\end_inset

 is a prime (maximal) ideal if 
\begin_inset Formula $R\slash I=\mathbb{Q}\left[x\right]\slash\left\langle x^{2}-n\right\rangle $
\end_inset

 is an integral domain (field).
 
\end_layout

\begin_layout Subsection*
Perfect Square
\end_layout

\begin_layout Standard
Suppose 
\begin_inset Formula $n=m^{2}$
\end_inset

 for some 
\begin_inset Formula $m\in\mathbb{Z}$
\end_inset

.
 Then 
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
x^{2}-n=x^{2}-m^{2}=\left(x-m\right)\left(x+m\right)\in I
\]

\end_inset


\end_layout

\begin_layout Standard
and as 
\begin_inset Formula $\left(x-m\right),\left(x+m\right)\in\mathbb{Q}\left[x\right]$
\end_inset

 but 
\begin_inset Formula $\left(x-m\right),\left(x+m\right)\notin I$
\end_inset

.
 But 
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\left(\left(x-m\right)+I\right)\left(\left(x+m\right)+I\right)=\left(x-m\right)\left(x+m\right)+I=I
\]

\end_inset


\end_layout

\begin_layout Standard
thus 
\begin_inset Formula $R\slash I$
\end_inset

 is not an integral domain and thus not a field.
\end_layout

\begin_layout Subsection*
Not a Perfect Square
\end_layout

\begin_layout Standard
Suppose 
\begin_inset Formula $n$
\end_inset

 is not a perfect square.
 Then by 
\series bold
7b)
\series default
, 
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
R\slash I\approx\mathbb{Q}\left[\sqrt{n}\right]
\]

\end_inset

Let's show 
\begin_inset Formula $F=\mathbb{Q}\left[\sqrt{n}\right]$
\end_inset

 is a field.
 We already know this is a ring, so all the remains to be shown is that
 
\begin_inset Formula $F$
\end_inset

 is commutative under multiplication, has no zero divisors, 
\begin_inset Formula $F$
\end_inset

 has a unity, and every nonzero element is a unit.
 Throughout the proof, we will use 
\begin_inset Formula $a+b\sqrt{n},c+d\sqrt{n}\in F$
\end_inset

 for convenience.
 
\end_layout

\begin_layout Subsection*
Commutativity Under Multiplication
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\left(a+b\sqrt{n}\right)\left(c+d\sqrt{n}\right)=ac+bdn+\left(ad+bc\right)\sqrt{n}=ca+dbn+\left(da+cb\right)\sqrt{n}=\left(c+d\sqrt{n}\right)\left(a+b\sqrt{n}\right)
\]

\end_inset


\end_layout

\begin_layout Standard
Alternatively, since 
\begin_inset Formula $R$
\end_inset

 is a commutative ring, then so is 
\begin_inset Formula $R\slash I$
\end_inset

.
\end_layout

\begin_layout Subsection*
No Zero Divisors
\end_layout

\begin_layout Standard
Suppose 
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\left(a+b\sqrt{n}\right)\left(c+d\sqrt{n}\right)=0
\]

\end_inset


\end_layout

\begin_layout Standard
Suppose WLOG that 
\begin_inset Formula $\left(a+b\sqrt{n}\right)\neq0$
\end_inset

.
 Then 
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\left(a+b\sqrt{n}\right)\left(c+d\sqrt{n}\right)=ac+bdn+\left(ad+bc\right)\sqrt{n}=0
\]

\end_inset


\end_layout

\begin_layout Standard
so 
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\left(ac+bdn\right),\left(ad+bc\right)=0
\]

\end_inset


\end_layout

\begin_layout Standard
From 
\begin_inset Formula $\left(ad+bc\right)=0$
\end_inset

,
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
a=-\frac{bc}{d}
\]

\end_inset


\end_layout

\begin_layout Standard
so
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
ac+bdn=-\frac{bc}{d}c+bdn=0
\]

\end_inset


\end_layout

\begin_layout Standard
so 
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
bdn=\frac{bc^{2}}{d}
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
bd^{2}n=bc^{2}
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
d^{2}n=c^{2}
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
d\sqrt{n}=c
\]

\end_inset


\end_layout

\begin_layout Standard
but as 
\begin_inset Formula $c,d\in\mathbb{Q}$
\end_inset

 but 
\begin_inset Formula $\sqrt{n}\notin\mathbb{Q}$
\end_inset

, then 
\begin_inset Formula $d\sqrt{n}\notin\mathbb{Q}$
\end_inset

 and thus this equality can only hold if 
\begin_inset Formula $c=d=0$
\end_inset

.
\end_layout

\begin_layout Subsection*
Unity
\end_layout

\begin_layout Standard
Consider 
\begin_inset Formula $1\in R$
\end_inset

.
 Then 
\begin_inset Formula $1+I\in R\slash I$
\end_inset

.
 For any 
\begin_inset Formula $a+I\in R\slash I$
\end_inset

, we have 
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\left(1+I\right)\left(a+I\right)=1a+I=a+I
\]

\end_inset


\end_layout

\begin_layout Standard
so 
\begin_inset Formula $1+I$
\end_inset

 is a unity in 
\begin_inset Formula $R\slash I$
\end_inset

.
 Alternatively, as 
\begin_inset Formula $R$
\end_inset

 is a ring with unity, so is 
\begin_inset Formula $R\slash I$
\end_inset

.
\end_layout

\begin_layout Subsection*
Units
\end_layout

\begin_layout Standard
Suppose 
\begin_inset Formula $a+b\sqrt{n}\neq0$
\end_inset

.
 Then 
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
1=\frac{a+b\sqrt{n}}{a+b\sqrt{n}}*\frac{a-b\sqrt{n}}{a-b\sqrt{n}}=\left(a+b\sqrt{n}\right)\frac{a-b\sqrt{n}}{a^{2}-b^{2}n}=\left(a+b\sqrt{n}\right)\left(\left(\frac{a}{a^{2}-b^{2}n}\right)+\left(\frac{-b}{a^{2}-b^{2}n}\right)\sqrt{n}\right)
\]

\end_inset


\end_layout

\begin_layout Standard
so 
\begin_inset Formula $\left(a+b\sqrt{n}\right)^{-1}=\left(\left(\frac{a}{a^{2}-b^{2}n}\right)+\left(\frac{-b}{a^{2}-b^{2}n}\right)\sqrt{n}\right)$
\end_inset

.
 As all conditions are met, then 
\begin_inset Formula $R\slash I$
\end_inset

 is a field.
\end_layout

\begin_layout Subsection*
a)
\end_layout

\begin_layout Standard
This is true when 
\begin_inset Formula $n$
\end_inset

 is not a perfect square.
\end_layout

\begin_layout Subsection*
b)
\end_layout

\begin_layout Standard
This is true when 
\begin_inset Formula $n$
\end_inset

 is not a perfect square.
\end_layout

\begin_layout Section*
9.
\end_layout

\begin_layout Subsection*
a)
\end_layout

\begin_layout Standard
First, let's show 
\begin_inset Formula $H$
\end_inset

 this is a subgroup.
 We can apply one of the subgroup tests.
 First, let's show 
\begin_inset Formula $H$
\end_inset

 is nonempty.
 
\begin_inset Formula 
\[
1\in H
\]

\end_inset

Now, let's apply the second subgroup test.
 Suppose 
\begin_inset Formula $a,b\in H$
\end_inset

.
 Then 
\begin_inset Formula $\left|a\right|=\left|b\right|=1$
\end_inset

.
 Further, 
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\left|ab^{-1}\right|=\left|\frac{a}{b}\right|=\frac{\left|a\right|}{\left|b\right|}=\frac{1}{1}=1
\]

\end_inset


\end_layout

\begin_layout Standard
So 
\begin_inset Formula $ab^{-1}\in H$
\end_inset

.
 As the complex numbers are commutative under multiplication, then 
\begin_inset Formula $G$
\end_inset

 is abelian.
 All subgroups of an abelian group are normal.
 Thus 
\begin_inset Formula $H$
\end_inset

 is a normal subgroup of 
\begin_inset Formula $G$
\end_inset

.
 
\end_layout

\begin_layout Subsection*
b)
\end_layout

\begin_layout Standard
Consider the mapping 
\begin_inset Formula $\phi\left(aH\right)=\left|a\right|$
\end_inset

.
 To show this is an isomorphism, we need to show this is one-to-one, onto,
 and a homomorphism.
 
\end_layout

\begin_layout Subsection*
One-to-One
\end_layout

\begin_layout Standard
Suppose 
\begin_inset Formula $\phi\left(aH\right)=\phi\left(bH\right)$
\end_inset

.
 Then
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\left|a\right|=\left|b\right|
\]

\end_inset


\end_layout

\begin_layout Standard
Consider 
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\left|ab^{-1}\right|=\frac{\left|a\right|}{\left|b\right|}=\frac{\left|a\right|}{\left|a\right|}=1
\]

\end_inset


\end_layout

\begin_layout Standard
thus 
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
ab^{-1}\in H
\]

\end_inset


\end_layout

\begin_layout Standard
and thus 
\begin_inset Formula $aH=bH$
\end_inset

.
\end_layout

\begin_layout Subsection*
Onto
\end_layout

\begin_layout Standard
Suppose 
\begin_inset Formula $a\in\mathbb{R}^{+}$
\end_inset

.
 Then 
\begin_inset Formula 
\[
a=\left|a\right|=\phi\left(aH\right)
\]

\end_inset


\end_layout

\begin_layout Subsection*
Homomorphism
\end_layout

\begin_layout Standard
Consider
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\phi\left(\left(aH\right)\left(bH\right)\right)=\phi\left(\left(ab\right)H\right)=\left|ab\right|=\left|a\right|\left|b\right|=\phi\left(aH\right)\phi\left(bH\right)
\]

\end_inset


\end_layout

\begin_layout Standard
Thus 
\begin_inset Formula $G\slash H\approx\left(\mathbb{R}^{+},*\right)$
\end_inset


\end_layout

\begin_layout Section*
10.
\end_layout

\begin_layout Standard
We can use the subring test.
 We need to show 
\begin_inset Formula $S$
\end_inset

, the set of all nilpotent elements satisfied the subring test.
 For convenience, suppose 
\begin_inset Formula $x,y\in S$
\end_inset

 throughout this proof such that 
\begin_inset Formula $x^{n}=0,y^{m}=0$
\end_inset

.
\end_layout

\begin_layout Subsection*
Non-Empty
\end_layout

\begin_layout Standard
Consider 
\begin_inset Formula $0\in R$
\end_inset

.
 
\begin_inset Formula $0^{2}=0$
\end_inset


\end_layout

\begin_layout Subsection*
Difference
\end_layout

\begin_layout Standard
We need to show 
\begin_inset Formula $x-y\in S$
\end_inset

.
 Consider 
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\left(x-y\right)^{n+m}=\sum_{k=0}^{n+m}c_{k}x^{k}y^{n+m-k}
\]

\end_inset


\end_layout

\begin_layout Standard
where 
\begin_inset Formula $c_{k}=\left(\begin{array}{c}
n+m\\
k
\end{array}\right)$
\end_inset

 is the binomial coefficient.
 But as either 
\begin_inset Formula $k\geq n$
\end_inset

 or 
\begin_inset Formula $n+m-k\geq m$
\end_inset

 for each 
\begin_inset Formula $0\leq k\leq n+m$
\end_inset

, then either 
\begin_inset Formula $x^{k}=0$
\end_inset

 or 
\begin_inset Formula $y^{n+m-k}=0$
\end_inset

 for each 
\begin_inset Formula $k$
\end_inset

, thus
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\left(x-y\right)^{n+m}=\sum_{k=0}^{n+m}c_{k}x^{k}y^{n+m-k}=\sum_{k=0}^{n+m}c_{k}0=0
\]

\end_inset


\end_layout

\begin_layout Standard
Thus 
\begin_inset Formula $x-y\in S$
\end_inset


\end_layout

\begin_layout Subsection*
Product
\end_layout

\begin_layout Standard
We need to show 
\begin_inset Formula $xy\in S$
\end_inset

.
 Then 
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\left(xy\right)^{n}=xy\dots xy=x^{n}y^{n}=0y^{n}=0
\]

\end_inset


\end_layout

\begin_layout Standard
as 
\begin_inset Formula $R$
\end_inset

 is a commutative ring.
 Thus 
\begin_inset Formula $xy\in S$
\end_inset

 and 
\begin_inset Formula $S$
\end_inset

 is a subring of 
\begin_inset Formula $R$
\end_inset

.
\end_layout

\begin_layout Section*
11.
\end_layout

\begin_layout Standard
Suppose 
\begin_inset Formula $a^{2}=a$
\end_inset

 and 
\begin_inset Formula $\phi$
\end_inset

 is a ring homomorphism.
 Then 
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\phi\left(a\right)^{2}=\phi\left(a^{2}\right)=\phi\left(a\right)
\]

\end_inset


\end_layout

\begin_layout Standard
so 
\begin_inset Formula $\phi\left(a\right)$
\end_inset

 is idempotent.
 
\end_layout

\begin_layout Section*
12.
\end_layout

\begin_layout Standard
No comment.
\end_layout

